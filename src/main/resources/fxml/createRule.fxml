<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="551.0" prefWidth="457.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bskoczylas.modelinglegalreasoning.controllers.projectControllers.RuleController">

    <Label layoutX="246.0" layoutY="321.0" text="Premises:">
      <font>
         <Font size="17.0" />
      </font></Label>
    <ComboBox fx:id="premisesComboBox" layoutX="246.0" layoutY="363.0" prefHeight="24.0" prefWidth="180.0" />
    <Button layoutX="279.0" layoutY="411.0" onAction="#handleAddPremiseButtonAction" text="Add premise" />
    <TableView fx:id="premisesTable" layoutX="20.0" layoutY="206.0" prefHeight="314.0" prefWidth="200.0">
        <columns>
            <TableColumn prefWidth="199.0" text="Premises" />
        </columns>
    </TableView>
    
    <Label layoutX="244.0" layoutY="217.0" prefHeight="24.0" prefWidth="101.0" text="Conclusions:">
      <font>
         <Font size="16.0" />
      </font></Label>
    <RadioButton fx:id="decisionRadioButton1" layoutX="244.0" layoutY="258.0" prefHeight="18.0" prefWidth="158.0" text="Decision 1" />
    <RadioButton fx:id="decisionRadioButton2" layoutX="244.0" layoutY="292.0" prefHeight="18.0" prefWidth="171.0" text="Decision 2" />

    <Button layoutX="264.0" layoutY="461.0" onAction="#handleAddRuleButtonAction" prefHeight="59.0" prefWidth="130.0" text="Add Rule">
      <font>
         <Font size="22.0" />
      </font></Button>
   <Label layoutX="144.0" layoutY="26.0" text="Add your rule">
      <font>
         <Font size="25.0" />
      </font>
   </Label>
    <Label fx:id="labelTextArea" layoutX="20.0" layoutY="66.0" prefHeight="129.0" prefWidth="425.0" style="-fx-border-color: transparent;" wrapText="true">
        <text>
            Construct a rule.
            A set of premises leads to a given conclusion (decision one or two).
        </text>
      <font>
         <Font size="23.0" />
      </font>
    </Label>
</AnchorPane>
